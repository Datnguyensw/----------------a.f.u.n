    }
    if (ViewBag.i_pageitem != null)
    {
        i_pageitem = ViewBag.i_pageitem.ToString();
    }
    ViewBag.Title = bookname;
    if (bookid!=""){
        TempData["bookid"] = bookid;
        Session["BOOK_DUM"] = bookid;
    }else{
        TempData["bookid"] = 1;
        Session["BOOK_DUM"] = 1;
    }
