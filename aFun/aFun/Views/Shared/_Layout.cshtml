    <script type="text/javascript">
        function searchText() {
            var key = document.getElementById("keyword").value;
            if (key.length > 2) {
               // alert(key);
                $(document).ready(function () {
                   // alert(key);
                    $.ajax({
                        type: "PORT",
                        url: "/search.html",
                        data: "key=" + key,
                        success: function (answer) {
                            $("div#search").fadeIn();
                            $("div#search").html(answer);
                            console.log(answer)
                        }
                    });
                });
            }
        }
        $("a[href='#top']").click(function () {
            $("html, body").animate({ scrollTop: 0 }, "slow");
            return false;
        });
   
