<script type="text/javascript">
    $(document).ready(function () {
        //when button is clicked
        $('#btnCancel').click(function () {
            $('#dlgMsgBox').dialog("close");
        });

    });

</script>

<div id='dlgMsgBox'>
    @if (Session["LoginName"] != null)
    {
        <div>Quý khách Mua sách để sử dụng chức năng này.</div>
        <div class="txcenter btn_goup">
            <a href="/acc/buybox/@ViewBag.bookid">
                <input type="button" value="Mua sách" class="btn_blue" /></a>

            <input type="button" value="Hủy" class="btn_gray" id="btnCancel" />
        </div>
    }
    
</div>
<script type="text/javascript">
    $(function () {
        $("#dlgMsgBox").dialog({
            title: "Thông báo",
            modal: true,
            autoOpen: true,
            width: 310,
            resizable: false,
            overlay: {
                backgroundColor: '#000',
                opacity: 0.8
            },
            buttons: {}
        });
    });
</script>
