            <div class="tin">
                <div class="nd_vb">
                    <span class="title_tin"><strong>@TXNAME</strong></span>
                    <em>(Trích)</em>
                    <br />
                    @Html.Raw(HttpUtility.HtmlDecode(SHORT_DESC.ToString()))
                </div>
                <a href="@MakeLink.MakeLinkLawRead(CATE_NAME, TXNAME, AUTO_ID)" title="Đọc tiếp">
